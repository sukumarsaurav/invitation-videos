# VideoInvites Environment Configuration
# Copy this file to .env and update with your actual values

# App Settings
APP_NAME="InvitationVideos"
APP_ENV=development
APP_DEBUG=true
APP_URL=https://invitationvideos.com

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_DATABASE=videoinvites
DB_USERNAME=root
DB_PASSWORD=your_database_password

# Stripe (Global Payments - USD)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret

# Razorpay (India Payments - INR)
RAZORPAY_KEY_ID=rzp_test_your_razorpay_key_id
RAZORPAY_KEY_SECRET=your_razorpay_key_secret
RAZORPAY_WEBHOOK_SECRET=your_razorpay_webhook_secret

# File Upload Settings
UPLOAD_MAX_SIZE=10485760
UPLOAD_PATH=uploads/

# Security
CSRF_TOKEN_NAME=csrf_token
SESSION_LIFETIME=28800

# Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URI=https://invitationvideos.com/auth/google/callback

# Email Configuration (optional)
MAIL_DRIVER=smtp
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_FROM_ADDRESS=noreply@videoinvites.com
MAIL_FROM_NAME="VideoInvites"
